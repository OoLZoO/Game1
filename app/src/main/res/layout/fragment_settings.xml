<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.mz_host.mobiledatenbanken.mobiledatenbanken.MyFragment3">

    <!-- TODO: Update blank fragment layout -->
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Einstellungen"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textViewInfoText"
            android:layout_column="0"
            android:text="Änderungen an der Datenbank können nicht rückgänig gemacht werden." />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="Datenbank löschen"
            android:id="@+id/buttonDeleteDatabase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"></Button>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="Tabelle Aufgaben löschen"
            android:id="@+id/buttonDeleteTableAufgaben"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"></Button>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDeleteSpecificAufgaben"
            android:layout_column="0" />
    </TableRow>

</TableLayout>
